<div class="margin_top_60">
  <div class="col-xs-12 col-md-5">
    <div class="col-xs-8">
      <%= @slide.id %> <%= @slide.client_name %>
    </div>
    <div class="col-xs-4">
      <%= image_tag (@slide.client_logo) %>
    </div>

    <h2 class="margin_top_60"> <%= @slide.project_title %></h2>
    <article><%= @slide.description.html_safe %></article>
  </div>

  <div class="col-xs-12 col-md-7 margin_top_30">
    <%= image_tag @slide.image, class:'img-responsive center-block' %>
  </div>
</div>

<div class="text-center col-xs-12 margin_top_60">
  <%= link_to 'Retour', admin_path, class:"btn btn-default" %>
</div>
